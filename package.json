{
  "name": "optimaai",
  "version": "1.0.0",
  "description": "Óptima Digital - Agência de Marketing Digital e Automação com IA",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./styles-tailwind.css --watch",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./styles-tailwind.css --minify",
    "build:js": "esbuild src/js/main.js --bundle --minify --outfile=scripts.min.js --format=iife",
    "build:js:dev": "esbuild src/js/main.js --bundle --outfile=scripts.bundle.js --format=iife --sourcemap",
    "build": "npm run build:css && npm run build:js",
    "watch": "npm run build:js:dev -- --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css}\" \"index.html\""
  },
  "devDependencies": {
    "canvas": "^3.2.0",
    "esbuild": "^0.20.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0"
  }
}